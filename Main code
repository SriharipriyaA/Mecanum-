#include <AFMotor.h>
AF_DCMotor motor1(1, MOTOR12_1KHZ);
AF_DCMotor motor2(2, MOTOR12_1KHZ);
AF_DCMotor motor3(4, MOTOR34_1KHZ);
AF_DCMotor motor4(3, MOTOR34_1KHZ);
char command;


void setup() 
{       
  Serial.begin(9600); 
}

void loop()
{
    if(Serial.available() > 0)
    {
      command = Serial.read();
      Stop();
      Serial.println(command);     
      switch(command)
      {
        case 'F':  
          forward();
          break;
        case 'B':  
          back();
          break;
        case 'L':  
          left();
          break;
        case 'R':
          right();
          break;
        case 'G':
          10oClock();
          break;
        case 'H':
          8oClock();
          break;
        case 'I':
          2oClock();
          break;
        case 'J':
          4oClock();
          break;
        case 'W':
          right360();
	delay(1000);
          break;
        case 'X':
          left360();
	delay(1000);
          break;
        case 'U':
          rotate_right();
	delay(1000);
          break;
        case 'V':
          rotate_left();
	delay(1000);
          break;
      }
    }
  
}

void forward(){
  motor1.setSpeed(200); 
  motor1.run(FORWARD); 
  motor2.setSpeed(200); 
  motor2.run(FORWARD); 
  motor3.setSpeed(200);
  motor3.run(FORWARD); 
  motor4.setSpeed(200);
  motor4.run(FORWARD); 
}
void back(){
  motor1.setSpeed(200); 
  motor1.run(BACKWARD); 
  motor2.setSpeed(200); 
  motor2.run(BACKWARD); 
  motor3.setSpeed(200); 
  motor3.run(BACKWARD); 
  motor4.setSpeed(200); 
  motor4.run(BACKWARD); 
}
void left(){
  motor1.setSpeed(200); 
  motor1.run(BACKWARD); 
  motor2.setSpeed(200); 
  motor2.run(FORWARD); 
  motor3.setSpeed(200); 
  motor3.run(FORWARD);  
  motor4.setSpeed(200); 
  motor4.run(BACKWARD);  
}
void right(){
  motor1.setSpeed(200); 
  motor1.run(FORWARD); 
  motor2.setSpeed(200); 
  motor2.run(BACKWARD); 
  motor3.setSpeed(200); 
  motor3.run(BACKWARD); 
  motor4.setSpeed(200); 
  motor4.run(FORWARD); 
} 
void Stop(){
  motor1.setSpeed(0); 
  motor1.run(RELEASE); 
  motor2.setSpeed(0); 
   motor2.run(RELEASE); 
  motor3.setSpeed(0); 
  motor3.run(RELEASE); 
  motor4.setSpeed(0); 
  motor4.run(RELEASE); 
}
void 10oClock(){
  motor1.setSpeed(200); 
  motor1.run(RELEASE); 
  motor2.setSpeed(200); 
  motor2.run(FORWARD); 
  motor3.setSpeed(200); 
  motor3.run(FORWARD); 
  motor4.setSpeed(200); 
  motor4.run(RELEASE); 
}
void 2oClock(){
  motor1.setSpeed(200); 
  motor1.run(FORWARD); 
  motor2.setSpeed(200); 
  motor2.run(RELEASE); 
  motor3.setSpeed(200); 
  motor3.run(RELEASE); 
  motor4.setSpeed(200); 
  motor4.run(FORWARD); 
}
void 8oClock(){
  motor1.setSpeed(200); 
  motor1.run(BACKWARD); 
  motor2.setSpeed(200); 
  motor2.run(RELEASE); 
  motor3.setSpeed(200); 
  motor3.run(RELEASE); 
  motor4.setSpeed(200); 
  motor4.run(BACKWARD); 
}
void 4oClock(){
  motor1.setSpeed(200); 
  motor1.run(RELEASE); 
  motor2.setSpeed(200); 
  motor2.run(BACKWARD); 
  motor3.setSpeed(200); 
  motor3.run(BACKWARD); 
  motor4.setSpeed(200); 
  motor4.run(RELEASE); 
}
void left360(){
  motor1.setSpeed(200); 
  motor1.run(BACKWARD); 
  motor2.setSpeed(200); 
  motor2.run(BACKWARD); 
  motor3.setSpeed(200); 
  motor3.run(FORWARD); 
  motor4.setSpeed(200); 
  motor4.run(FORWARD); 
}
void right360(){
  motor1.setSpeed(200); 
  motor1.run(FORWARD); 
  motor2.setSpeed(200); 
  motor2.run(FORWARD); 
  motor3.setSpeed(200); 
  motor3.run(BACKWARD); 
  motor4.setSpeed(200); 
  motor4.run(BACKWARD); 
}
void rotate_left(){
  motor1.setSpeed(200); 
  motor1.run(RELEASE); 
  motor2.setSpeed(200); 
  motor2.run(RELEASE); 
  motor3.setSpeed(200); 
  motor3.run(FORWARD); 
  motor4.setSpeed(200); 
  motor4.run(FORWARD); 
}
void rotate_right(){
  motor1.setSpeed(200); 
  motor1.run(FORWARD); 
  motor2.setSpeed(200); 
  motor2.run(FORWARD); 
  motor3.setSpeed(200); 
  motor3.run(RELEASE); 
  motor4.setSpeed(200); 
  motor4.run(RELEASE); 
}
